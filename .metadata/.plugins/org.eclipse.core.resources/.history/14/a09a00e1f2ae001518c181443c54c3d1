<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper>
	
	<!-- RESULTMAP -->
	
		<resultMap id="personCodeMap" type="java.lang.Integer">
			<result type="intSkPerson" column="skPerson"/>
		</resultMap> 
	
	<!-- END RESULTMAP -->
	
	<!-- INSERT QUERIES -->
	
		<insert id="insertPerson">
			INSERT INTO tblPerson (skNameFK, strGenderCodeFK, datBirthday)
			VALUES(
				(SELECT skName FROM tblName
				 WHERE strFirstName=#{name.strFirstName}
				 AND strMiddleName=#{name.strMiddleName}
				 AND strLastName=#{name.strLastName}),
				(SELECT strGenderCode FROM tblGender
				 WHERE strGender=#{strGender}),
				 #{birthday}
			)
		</insert>
		
		<insert id="insertName">
		
			INSERT INTO tblName
			(strFirstName, strMiddleName, strLastName)
			VALUES
			(#{strFirstName}, #{strMiddleName}, #{strLastName})
		
		</insert>
		
		<insert id="insertAddress">
			INSERT INTO tblAddress (strAddressText, skPersonFK)
			VALUES  (#{person.strAddress},
					 #{person.skPerson}
			)
		</insert>
		
		<insert id="insertEmail">
			INSERT INTO tblEmail (strEmailDesc, skPersonFK)
			VALUES (#{person.strEmail},
					#{person.skPerson}
			)
		</insert>
		
		<insert id="insertContactNo">
			INSERT INTO tblContactNo (strContactNo, skPersonFK)
			VALUES (#{person.strContactNo},
					#{person.skPerson}
			)
		</insert>
	
	<!-- END INSERT QUERIES -->
	
	</mapper>
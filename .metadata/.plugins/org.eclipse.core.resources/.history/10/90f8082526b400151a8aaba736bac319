	<mapper>
	
	<!-- RESULTMAP -->
		<resultMap type="countAccount" id="java.lang.Integer">
			<result property="intAccountExist" column="COUNT(strUsername)"/>
		</resultMap>
	<!-- END RESULTMAP -->
		
		
	<!-- SELECT QUERIES -->
	
		<select id="accountExisting">
			SELECT COUNT(strUsername) FROM tblAccount WHERE strUsername = #{strUsername} 
		</select>
	
	<!-- END SELECT QUERIES -->
	
